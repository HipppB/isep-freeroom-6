generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"] // "relationJoins"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model Event {
  id          String   @id // @default(uuid())
  resourceIds String[]
  title       String
  start       DateTime
  end         DateTime
  room        Room?    @relation(fields: [roomId], references: [roomId])
  roomId      String?
  // allDay           Boolean?
  // display          String? // 'auto' | 'background'
  // backgroundColor  String?
  // textColor        String?
}

model Room {
  roomId       String   @id
  icalsecurise String
  title        String
  building     Building
  floor        Floor
  // ressource    Json
  events       Event[]
}

enum Building {
  NDC
  NDL
}

enum Floor {
  GROUND
  FIRST
  SECOND
  THIRD
  FOURTH
  FIFTH
  SIXTH
}

